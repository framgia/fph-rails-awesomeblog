<div class="row">
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-body text-center">
                <%= gravatar_for current_user %>

                <h1><%= current_user.name %></h1>
                <%= current_user.email %>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <%= form_for(@micropost) do |f| %>
                    <%= render 'shared/error_messages', object: f.object %>

                    <div class="input-group">
                        <%= f.text_area :content, class: "form-control", placeholder: "Share your thoughts..." %>

                        <div class="input-group-append">
                            <%= f.submit "Post", class: "btn btn-primary"%>
                        </div>
                    </div>
                <% end %>
            </div>

            <div class="card-body">
                <h4>Micropost feed</h3>
                <hr>

                <% if @microposts.any? %>
                    <!-- rendering a collection: micropost/_micropost.html.erb -->
                    <ul class="list-unstyled">
                        <%= render @microposts %>
                    </ul>
                <% else %>
                    <div class="text-muted">Nothing to show</div>
                <% end %>
            </div>

            <div class="card-footer paginate text-center">
                <!-- Pass the collection to this method, because the controller name for this is not microposts, but static_pages -->
                <%= will_paginate @microposts if @microposts.any? %>
            </div>
        </div>
    </div>
</div>
